$page.setBgColor($ui.bgcolor)
$page.setTitle("Instructor Backup")
#set($lang = $data.getUser().getTemp("lang" ).toString())
$!data.getMessage()
<head>
<link rel="stylesheet" type="text/css" href="$content.getURI("/scrpts/htmlarea.css")" media="screen"/>
</head>
<font face="$ui.sansSerifFonts">
<table bgcolor="$ui.menuColor" width=100% cellspacing=0>
<tr align="right">
        <td>
        <font face="$ui.sansSerifFonts" size=3>
        <b>
        $brih_backup |<a href=$link.setPage("call,CourseMgmt_User,CourseHome.vm")>$data.getUser().getTemp("course_name" ).toString() </a> |  <a href=$link.setPage("call,IndexHome.vm")>$brih_home </a>
        </td>
</tr>
</table>

<form name=frm method="post" action="$link.setAction("BackupAction").setPage("call,Backups,BackupIns.vm")">

<table bgcolor="$ui.tableColor" align=left width=100%>
        
#if ($errorTemplate)
<tr align="right">
	<td align="right" colspan="4">
	<table bgcolor="$ui.bgcolor" width=100%>
        <tr align="right"><td align="right"><img src="$ui.image($ui.alertImage,$data)"></td>
        <td>
	#parse ($errorTemplate)
	</td></tr>
    	</table>
        </td>
</tr>
#end
<tr align="right"><td align="right" colspan="3">
#if ($lang == "english") 
	<b>$brih_course Wise $brih_backup 
	#else 
	$brih_course $brih_Of1 $brih_backup</b> 
	#end 
</td></tr>
<tr bgcolor="$ui.menuColor" >
<td align="left">
<input type="button" name="eventSubmit_doStudent_db_backup" class="button-ftextstyle" value="$brih_database #if($lang == "hindi") $brih_Of1 #end $brih_backup" onClick="checkField(document.frm,this);"/>
<input type="hidden" name="actionName">
<input type="button" name="eventSubmit_doCourseBackup" class="button-ftextstyle" value="$brih_content #if($lang == "hindi") $brih_Of1 #end $brih_backup" onClick="checkField(document.frm,this);"/>
<td align="right"><input type="text" name="courses" value="$data.getUser().getTemp("course_id" ).toString()" readonly />
</td>
</td>
</tr>
<tr><td align="right" colspan="2"><a href=$link.setPage("call,Backups,BackupList.vm").addPathInfo("st","ins")><b>$brih_backup $brih_list</b></a></td></tr>
	     
</table>
</form>

<SCRIPT LANGUAGE="javascript">
        function checkField(frm,field)
        {
                                frm.actionName.value=field.name;
                                frm.submit();
        }	
</SCRIPT>
