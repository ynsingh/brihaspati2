		frm.nt.value="";
		frm.news.value="";
		frm.et.value="";
		
	}
        function checkNews(frm,field)
        {
          if((frm.nt.value!="") &&(frm.news.value!="") && frm.et.value!="")
                {
		    	if((frm.et.value>=1) && (frm.et.value<=30))
	       		{
                        	frm.actionName.value=field.name;
                        	frm.submit();
			}
