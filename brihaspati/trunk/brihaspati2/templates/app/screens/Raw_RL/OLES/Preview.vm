<SCRIPT LANGUAGE="javascript">

        function checkField(frm,field){
	        if(confirm("Are u sure to overwrite the existing preview setting")){
        		frm.actionName.value=field.name;
        		frm.submit();
        	}
        	else{
        		return false;
        	}			
	}
	
	function checkValue(frm,field){							
		frm.actionName.value=field.name;			
		frm.submit();		
	}	

</script>
