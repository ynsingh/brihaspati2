<SCRIPT LANGUAGE="javascript">
  function checkField(frm,field)
   {
    if(frm.word_list.value!="")
    {
     frm.actionName.value=field.name;
     frm.submit();
    }
    else
     alert("Please select checkbox");
   }
</SCRIPT>
