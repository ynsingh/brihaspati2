<SCRIPT LANGUAGE="javascript">
function addDeleteList(field,frm)
{
if(field.checked)
	{
	frm.deleteFileNames.value=frm.deleteFileNames.value+field.name+"^";
	}
else
        {
        var rmFile,index,actualString,preString,postString;
        actualString=frm.deleteFileNames.value;
        index=actualString.indexOf(field.name+"^",0);
        preString=actualString.substring(0,index);
        postString=actualString.substring(index+field.name.length+1);
	actualString=preString+postString;
	
	frm.deleteFileNames.value=actualString;
	}
}
function ChkField(frm,field)
{
	frm.actionName.value=field.name;
        frm.submit();
}
function addUpdateList(field,frm,count)
{
        var grpid = document.getElementById("grp"+count).textContent;
        //alert("inside script document.frm.prg1.value\n"+grpid);
        var pgid = document.getElementById("pg"+count);
        var pgval = pgid.value;
        //alert("inside script document.frm.rollno1.value\n"+pgval);
        var tmp=grpid+":"+pgval;

        if(field.checked){
               frm.deleteFileNames.value=frm.deleteFileNames.value+tmp+"^";
               //alert("check field ---"+frm.deleteFileNames.value);

        }
        else{
                var rmFile,index,actualString,preString,postString;
                actualString=frm.deleteFileNames.value;
                //index=actualString.indexOf(field.name+"^",0);
                index=actualString.indexOf(tmp+"^",0);
                preString=actualString.substring(0,index);
                //postString=actualString.substring(index+field.name.length+1);
                postString=actualString.substring(index+tmp.length+1);
                actualString=preString+postString;
                frm.deleteFileNames.value=actualString;
                }
}
