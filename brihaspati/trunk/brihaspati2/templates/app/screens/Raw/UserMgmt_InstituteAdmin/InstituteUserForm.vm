<SCRIPT LANGUAGE="javascript">
function checkField(frm,field)
{
        var count=0;
        var tmpgrp,tmpprg,tmprl;
        var tmpgrp1,tmpprg1,tmprl1;
        if($counter>1){
        for(var i=1;i<=$counter;i++){
                var grpid = document.getElementById(i);
