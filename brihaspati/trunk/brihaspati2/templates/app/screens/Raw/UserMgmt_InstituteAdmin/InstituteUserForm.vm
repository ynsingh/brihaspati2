                //alert("inside script document.frm.rollno1.value\n"+rlval);
        if(count==0)
        {
                tmpgrp=grpval;
                tmpprg = pgval;
                tmprl = rlval;
                count=1;
        }
        else
        {
                tmpgrp1 = grpval;
                tmpprg1 = pgval;
                tmprl1 = rlval;
                count=0;
        }
                if(i>1)
                {
                        if(tmpgrp!=tmpgrp1)
