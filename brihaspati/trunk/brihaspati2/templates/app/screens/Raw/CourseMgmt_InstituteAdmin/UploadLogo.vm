$page.setBgColor($ui.bgcolor)
$page.setTitle(" Home | Institute  Management | Upload Institute Logo")
$!data.getMessage()

#set($lang = $data.getUser().getTemp("lang").toString())

<table bgcolor="$ui.menuColor" width=100%>
<tr><td>
        <a href=$link.setPage("call,IndexHome.vm") style=text-decoration:none>$brih_home</a> |
        #if($lang=="hindi")
                $RemoteInstitute $brih_of $brih_logo $brih_upload 
        #else
                 $brih_upload $RemoteInstitute $brih_logo
        #end
<td align="right"><img src="$content.getURI("/images/hand.gif")"> <a href=javascript:popupWin("/brihaspati2/docs/HeaderImage.html","newWin"); style=text-decoration:none>$brih_help</a>
        
</td></tr>
</table>

	<form name="frm" method="post" enctype="multipart/form-data" action="$link.setPage("call,CourseMgmt_InstituteAdmin,UploadLogo.vm").setAction("UserAction_InstituteAdmin")">
<table width=100% bgcolor="$ui.tableColor" cellpadding="2" align="left">
        <tr bgcolor="$ui.menuColor"><td colspan=2><b>$brih_upload $RemoteInstitute $brih_logo</b></td></tr>
        <tr>

                #fileUpload ("$brih_at_file <font color=RED>*</font>" "file")

        </tr>
        <tr bgcolor="$ui.menuColor">
        <td colspan=2 align="left">
       		<input type="button" name="eventSubmit_doUploadLogo" value="$brih_upload" onClick="CheckField(document.frm,this);"/>
                <input type="hidden" name="actionName" value=""/>
                <input type="hidden" name="count" value="$tdcolor"/>

        </td>
        </tr>
</table>
</form>
<SCRIPT LANGUAGE="javascript">
        function popupWin(url,popupName)
        {
                Win1=window.open(url,popupName,"resizable=0,scrollbars=1,height=400,width=400");
        }

        function CheckField(frm,field)
        {
                if(frm.file.value!="")
                {
                                frm.actionName.value=field.name;
                                frm.submit();
                }
                else
                {
                        alert("Please Fill All The Mandatory(*) Fields");
                }
        }
</SCRIPT>
