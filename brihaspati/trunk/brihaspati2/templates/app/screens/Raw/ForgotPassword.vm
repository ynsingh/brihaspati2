$page.setTitle("Login Page | forgot password")
$page.setBgColor($ui.bgcolor)
$!data.getMessage()  
<head>
<link rel="stylesheet" type="text/css" href="$content.getURI("/scrpts/htmlarea.css")" media="screen"/>
<script type="text/javascript" src="$content.getURI("/scrpts/PopWin.js")"></script
</head>

<table bgcolor="$ui.menuColor" width=100%>
<tr><td>
<a href=$link.setPage("BrihaspatiLogin.vm").addPathInfo("lang",$lang)>$brih_login $WikiPage</a> | $brih_forgot $brih_pwd 
</td>
	<td align="right">
              <img src="$content.getURI("/images/hand.gif")"><a href=javascript:popupWin("/brihaspati2/docs/ForgetPassword.html","newWin"); style=text-decoration:none><font size=3>$brih_help</font></a>
        </td>
</tr>
</table>
#if($status == "HintQus")
<form name=frm method="post" action="$link.setPage("BrihaspatiLogin.vm").setAction("ForgotPassword")">
<table align=left bgcolor="$ui.tableColor" width="100%">
           	<tr><td><font size=4><b>$brih_hint $brih_qus</b></font></td></tr>
        	<tr>
                	#entry1Cell("$brih_qus" "$qname")
        	</tr>
                <tr>
                	#formCell("$Profile_Ans" "HintAns" "")
                </tr>
        	<tr bgcolor="$ui.menuColor">
        	<td colspan=2>
			<input type="hidden" name="lang" value=$lang>
          		<input type="hidden" name="actionName" value="eventSubmit_doSendNewPassword">
          		<input type="hidden" name="uid" value=$uid>
          		<input type="hidden" name="username" value=$username>
          		<input type="button" class="button-ftextstyle" name="eventSubmit_doSendNewPassword" value="$brih_submit" onClick="checkAnswer(document.frm,this);"/>
        	</td>
        	</tr>
</table>
</form>
#else
<form name="frm1" method="post" action="$link.setPage("ForgotPassword.vm").setAction("ForgotPassword")">
<table align=left width=100% bgcolor="$ui.tableColor">
		<tr><td width="15"> <font face="$ui.sansSerifFonts">$brih_login $brih_name </td>
                <td width="40"><input type="text" size="30" name="username" value=""></td>
		</tr>
        	<tr bgcolor="$ui.menuColor"> 
	  	##<td align=center colspan=2 bgcolor="$ui.menuColor">
	  	<td colspan=2>
			<input type="hidden" name="lang" value=$lang>
            		<input type="hidden" name="actionName" value="eventSubmit_doCheckUser">
            		#if($lang == "hindi")
			<input type="button" class="button-ftextstyle" name="eventSubmit_doCheckUser" value="$brih_pwdNew $brih_get " onClick="checkUserId(document.frm1,this);">
			#else
			<input type="button" class="button-ftextstyle" name="eventSubmit_doCheckUser" value="$brih_get $brih_pwdNew" onClick="checkUserId(document.frm1,this);">
			#end
          	</td> 
        	</tr>
</table>
</form>
#end

<SCRIPT LANGUAGE="javascript">
        function checkUserId(frm1,field)
        {
                if(frm1.username.value=="")
                {
                        alert("Please Fill The User Name!!");
                }
                else
                {
                                frm1.actionName.value=field.name;
                                frm1.submit();
                }
        }
        function checkAnswer(frm,field)
        {
                if(frm.HintAns.value=="")
                {
                        alert("Please Fill Hint Answer!!");
                }
                else
                {
                                frm.actionName.value=field.name;
                                frm.submit();
                }
        }
</SCRIPT>
